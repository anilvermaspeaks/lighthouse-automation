pipeline {
  agent any

  tools {nodejs "nodejs"}

  stages {
    stage('INSTALL PACKAGES') {
      steps {
        sh "npm install"
      }
    }
     stage('Reporting') {
      steps {
        echo "${env.HOME}"
        echo "start building lighthouse"
         sh "node https://github.com/anilvermaspeaks/lighthouse-automation/tree/main/src/lightHouse/index.js && exit"
      }
    }
    stage('BUILD APP') {
      steps {
        sh "node_modules/.bin/ng build --prod"
      }
    }
     
  }
}
pipeline {
  agent any

  tools {nodejs "nodejs"}

  stages {
    stage('INSTALL PACKAGES') {
      steps {
        sh "npm install"
      }
    }
    stage('TEST') {
      steps {
        echo "start building lighthouse reporting"
        sh "npm run start:light"
      }
    }
    stage('BUILD APP') {
      steps {
        sh "node_modules/.bin/ng build --prod"
      }
    }
  }
}
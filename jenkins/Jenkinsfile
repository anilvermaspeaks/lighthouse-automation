pipeline {
  agent any

  tools {nodejs "nodejs"}

  stages {
    stage('INSTALL PACKAGES') {
      steps {
        sh "npm install"
      }
    }
     stage('Reporting') {
      steps {
 echo new File(env.WORKSPACE, pomPath).getParent()
        echo "start building lighthouse"
         sh "node src/lighthouse/index.js && exit"
      }
    }
    stage('BUILD APP') {
      steps {
        sh "node_modules/.bin/ng build --prod"
      }
    }
     
  }
}